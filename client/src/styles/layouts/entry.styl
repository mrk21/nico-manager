.l-entry {
  self = 'l-entry';
  
  display: flex;
  
  /{element(self, nav)} {
    width: 250px;
    padding-right: 50px;
    
    /{element(self, group)} {
      display: flex;
      align-items: baseline;
      
      h3 {
        display: block;
        font-size: 18px;
        text-transform: uppercase;
        margin: 0;
        margin-bottom: 5px;
        padding: 0;
        line-height: 2;
        color: #666;
      }
      
      /{element(self, group-count)} {
        margin-left: 7px;
        font-size: 12px;
        
        &:before { content: '('; }
        &:after { content: ')'; }
      }
      
      /{element(self, to-all-tags)} {
        margin-left: 7px;
      }
    }
    
    /{element(self, mylists)} {
      margin-bottom: 40px;
    }
    
    /{element(self, tags)} {}
  }
  
  /{element(self, entries)} {
    flex-grow: 1;
    width: 750px;
    
    /{element(self, group)} {
      h2 {
        display: inline-block;
        font-size: 18px;
        text-transform: uppercase;
        margin: 0;
        margin-bottom: 5px;
        padding: 0;
        line-height: 2;
        color: #666;
      }
      
      /{element(self, group-count)} {
        position: relative;
        top: -1px;
        display: inline-block;
        margin-left: 7px;
        font-size: 12px;
        
        &:before { content: '('; }
        &:after { content: ')'; }
      }
    }
    
    /{element(self, search)} {
      width: 100%;
      margin-bottom: 30px;
    }
  }
}
