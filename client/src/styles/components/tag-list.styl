.c-tag-list {
  self = 'c-tag-list';
  margin: 0;
  padding: 0;
  
  /{element(self, list-item)} {
    base-background-color = #48C9B0;
    count-background-color = lighten(base-background-color, 20%);
    
    display: inline-block;
    margin: 0;
    margin-bottom: 5px;
    margin-right: 10px;
    padding: 0;
    
    font-size: 14px;
    background: (base-background-color);
    box-shadow: 0 1px 1px rgba(0,0,0,0.2);
    transition: background-color 0.2s ease;
    max-width: 100%;
    
    a {
      display: flex;
      color: #fff;
      text-decoration: none;
      width: 100%;
      
      /{$element(self, tag-element)} {
        display: inline-block;
        vertical-align: middle;
        line-height: 1.6;
        margin: 0;
        padding: 0;
      }
      
      /{element(self, name)} {
        @extend {$element(self, tag-element)};
        padding: 0 7px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        flex-grow: 1;
      }
      
      /{element(self, count)} {
        @extend {$element(self, tag-element)};
        
        padding: 0 7px;
        background: (count-background-color);
        transition: background-color 0.2s ease;
      }
    }
    
    &:hover {
      background: darken(base-background-color, 20%);
      
      {element(self, count)} {
        background: darken(count-background-color, 20%);
      }
    }
  }
}
