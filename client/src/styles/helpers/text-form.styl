text-form() {
  display: block;
  padding: 10px 15px;
  margin: 20px auto;
  
  border: 2px solid rgba(0,0,0,0);
  box-shadow:
    0 1px 1px rgba(0,0,0, 0.1),
    0 -1px 0 rgba(0,0,0, 0.025);
  
  font-size: 18px;
  font-weight: 300;
  color: #666;
  
  transition:
    border-color 0.2s ease,
    box-shadow 0.2s ease;
  
  &:hover {
    border-color: #ddd;
    box-shadow: none;
  }
  &:focus {
    border-color: #aaa;
    box-shadow: none;
  }
  &::-moz-placeholder {
    text-transform: capitalize;
    color: #666;
  }
}
